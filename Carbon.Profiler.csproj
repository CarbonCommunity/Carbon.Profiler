<Project Sdk="Microsoft.NET.Sdk" DefaultTargets="Build">
	<PropertyGroup>
		<Product>Carbon.Profiler</Product>
		<OutputType>Library</OutputType>
		<TargetFramework>net48</TargetFramework>
		<LangVersion>preview</LangVersion>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
	</PropertyGroup>

	<Import Project="$(SolutionDir)\.msbuild\ReferencesRust.props" />
	<Import Project="$(SolutionDir)\.msbuild\Configurations.props" />
	<Import Project="$(SolutionDir)\.msbuild\Metadata.props" />
	<Import Project="$(SolutionDir)\.msbuild\Tasks.targets" />

	<ItemGroup>
		<PackageReference Include="Lib.Harmony" Version="2.3.5" />
		<PackageReference Include="System.Reflection.Emit.ILGeneration" Version="4.7.0" />
	</ItemGroup>

	<Target Name="CustomRelease" AfterTargets="Build" DependsOnTargets="PrepareRelease">
		<PropertyGroup>
			<CarbonProfilerDir>$(SolutionDir)..\Release\.tmp\$(Configuration)\profiler</CarbonProfilerDir>
		</PropertyGroup>
		<MakeDir Directories="$(CarbonProfilerDir)\native"/>
		<Copy SourceFiles="$(OutputPath)$(Product).dll" DestinationFolder="$(c_managed)" />
		<Copy SourceFiles="$(OutputPath)$(Product).dll" DestinationFolder="$(CarbonProfilerDir)" />
	</Target>
</Project>
